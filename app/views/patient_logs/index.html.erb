<p id="notice"><%= notice %></p>

<h1>Patient Logs</h1>

<table>
  <thead>
    <tr>
      <th>Namepatient</th>
      <th>Dateappointment</th>
      <th>Namemedic</th>
      <th>Status</th>
      <th>Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_logs.each do |patient_log| %>
      <tr>
        <td><%= patient_log.namePatient %></td>
        <td><%= patient_log.dateAppointment %></td>
        <td><%= patient_log.nameMedic %></td>
        <td><%= patient_log.status %></td>
        <td><%= patient_log.info %></td>
        <td><%= link_to 'Show', patient_log %></td>
        <td><%= link_to 'Edit', edit_patient_log_path(patient_log) %></td>
        <td><%= link_to 'Destroy', patient_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

